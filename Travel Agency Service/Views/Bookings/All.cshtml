@model IEnumerable<Travel_Agency_Service.Models.Booking>
@{
    ViewData["Title"] = "All Bookings";
}

<style>
    .bookings-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0 40px;
        margin: -20px -15px 40px -15px;
        text-align: center;
    }

        .bookings-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .bookings-header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

    .stats-bar {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .stat-card {
        flex: 1;
        min-width: 200px;
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        text-align: center;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: #667eea;
    }

    .stat-label {
        color: #666;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .bookings-table-wrapper {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table-modern {
        margin: 0;
    }

        .table-modern thead {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .table-modern thead th {
                border: none;
                padding: 15px;
                font-weight: 600;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

                .table-modern thead th:first-child {
                    border-top-left-radius: 10px;
                }

                .table-modern thead th:last-child {
                    border-top-right-radius: 10px;
                }

        .table-modern tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: background 0.3s ease;
        }

            .table-modern tbody tr:hover {
                background: #f8f9ff;
            }

        .table-modern tbody td {
            padding: 15px;
            vertical-align: middle;
            color: #333;
        }

    .badge-status {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }

    .badge-paid {
        background: #d4edda;
        color: #155724;
    }

    .badge-unpaid {
        background: #fff3cd;
        color: #856404;
    }

    .badge-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .badge-active {
        background: #d1ecf1;
        color: #0c5460;
    }

    .btn-cancel {
        background: transparent;
        border: 2px solid #dc3545;
        color: #dc3545;
        padding: 6px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #dc3545;
            color: white;
        }

    .alert-info {
        border-radius: 10px;
        border-left: 4px solid #667eea;
        background: #f0f4ff;
        color: #333;
        padding: 15px 20px;
        margin-bottom: 25px;
    }

    .no-bookings {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

    .no-bookings-icon {
        font-size: 4rem;
        color: #667eea;
        margin-bottom: 20px;
    }

    .booking-id {
        font-weight: 700;
        color: #667eea;
    }

    .user-info {
        font-size: 0.9rem;
    }

    .user-name {
        font-weight: 600;
        color: #333;
        display: block;
    }

    .user-email {
        color: #666;
        font-size: 0.85rem;
    }

    .trip-info {
        font-size: 0.9rem;
    }

    .trip-title {
        font-weight: 600;
        color: #333;
        display: block;
    }

    .trip-location {
        color: #666;
        font-size: 0.85rem;
    }

    .price-display {
        font-weight: 700;
        color: #28a745;
        font-size: 1.05rem;
    }

    .search-filter {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        margin-bottom: 25px;
    }

        .search-filter .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 10px 15px;
        }

            .search-filter .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                outline: none;
            }

    @@media (max-width: 768px) {
        .bookings-header h2 {
            font-size: 2rem;
        }

        .bookings-table-wrapper {
            padding: 15px;
        }

        .table-modern {
            font-size: 0.85rem;
        }

            .table-modern thead th,
            .table-modern tbody td {
                padding: 10px 8px;
            }
    }
</style>

<div class="bookings-header">
    <div class="container">
        <h2>📋 All Bookings</h2>
        <p>Manage and monitor all customer bookings</p>
    </div>
</div>

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            <strong>ℹ️</strong> @TempData["Message"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="no-bookings">
            <div class="no-bookings-icon">📋</div>
            <h3>No bookings found</h3>
            <p>Bookings will appear here once customers start making reservations.</p>
        </div>
    }
    else
    {
        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="stat-card">
                <div class="stat-number">@Model.Count()</div>
                <div class="stat-label">Total Bookings</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@Model.Count(b => b.Paid)</div>
                <div class="stat-label">Paid</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@Model.Count(b => !b.Paid && !b.Cancelled)</div>
                <div class="stat-label">Pending Payment</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@Model.Count(b => b.Cancelled)</div>
                <div class="stat-label">Cancelled</div>
            </div>
        </div>

        <!-- Search/Filter Bar -->
        <div class="search-filter">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="🔍 Search by user, trip, or destination..." />
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-control">
                        <option value="">All Status</option>
                        <option value="paid">Paid Only</option>
                        <option value="unpaid">Unpaid Only</option>
                        <option value="cancelled">Cancelled Only</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" name="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-filter w-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; padding: 10px; border-radius: 10px; font-weight: 600;">
                        Filter
                    </button>
                </div>
            </form>
        </div>

        <!-- Bookings Table -->
        <div class="bookings-table-wrapper">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Trip Details</th>
                        <th>Booking Date</th>
                        <th>People</th>
                        <th>Total Price</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td class="booking-id">#@b.Id</td>
                            <td class="user-info">
                                @if (b.User != null)
                                {
                                    <span class="user-name">@b.User.FullName</span>
                                    <span class="user-email">@b.User.Email</span>
                                }
                                else
                                {
                                    <span class="text-muted">User #@b.UserId</span>
                                }
                            </td>
                            <td class="trip-info">
                                <span class="trip-title">@b.Trip?.Title</span>
                                <span class="trip-location">📍 @b.Trip?.Destination, @b.Trip?.Country</span>
                            </td>
                            <td>@b.BookingDate.ToString("MMM dd, yyyy")<br /><small class="text-muted">@b.BookingDate.ToString("hh:mm tt")</small></td>
                            <td><strong>@b.NumberOfPeople</strong> people</td>
                            <td class="price-display">@b.TotalPrice.ToString("C")</td>
                            <td>
                                @if (b.Paid)
                                {
                                    <span class="badge-status badge-paid">✓ Paid</span>
                                }
                                else
                                {
                                    <span class="badge-status badge-unpaid">⏳ Unpaid</span>
                                }
                            </td>
                            <td>
                                @if (b.Cancelled)
                                {
                                    <span class="badge-status badge-cancelled">✗ Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge-status badge-active">✓ Active</span>
                                }
                            </td>
                            <td>
                                @if (!b.Cancelled)
                                {
                                    <form asp-action="Cancel" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@b.Id" />
                                        <button type="submit"
                                                class="btn-cancel"
                                                onclick="return confirm('Are you sure you want to cancel booking #@b.Id?');">
                                            Cancel
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>