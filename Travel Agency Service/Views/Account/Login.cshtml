@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        margin: -20px -15px;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        padding: 50px;
        max-width: 480px;
        width: 100%;
    }

    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .login-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .login-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .login-subtitle {
        color: #666;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 0.95rem;
        display: block;
    }

    .form-control {
        padding: 12px 18px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .remember-me-group {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

        .remember-me-group input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin-right: 8px;
            cursor: pointer;
            accent-color: #667eea;
        }

        .remember-me-group label {
            margin: 0;
            color: #666;
            cursor: pointer;
            user-select: none;
        }

    .btn-login {
        width: 100%;
        padding: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-top: 10px;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
        }

    .alert-info {
        border-radius: 10px;
        border-left: 4px solid #667eea;
        background: #f0f4ff;
        color: #333;
        padding: 15px;
        margin-bottom: 25px;
    }

    .alert-danger {
        border-radius: 10px;
        border-left: 4px solid #dc3545;
        background: #ffe6e6;
        color: #721c24;
        padding: 15px;
        margin-bottom: 25px;
    }

    .signup-link {
        text-align: center;
        margin-top: 25px;
        padding-top: 25px;
        border-top: 1px solid #e0e0e0;
        color: #666;
    }

        .signup-link a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .signup-link a:hover {
                color: #764ba2;
                text-decoration: underline;
            }

    @@media (max-width: 576px) {
        .login-card {
            padding: 35px 25px;
        }

        .login-title {
            font-size: 1.8rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-icon">🔐</div>
            <h2 class="login-title">Welcome Back</h2>
            <p class="login-subtitle">Login to continue your journey</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                <strong>ℹ️</strong> @TempData["Message"]
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <strong>⚠️</strong> @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email" class="form-label">📧 Email Address</label>
                <input id="email" type="email" name="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="form-group">
                <label for="password" class="form-label">🔒 Password</label>
                <input id="password" type="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>

            <div class="remember-me-group">
                <input type="checkbox" name="rememberMe" id="rememberMe" />
                <label for="rememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-login">
                Login
            </button>

            <div class="signup-link">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Sign up here</a>
            </div>
        </form>
    </div>
</div>