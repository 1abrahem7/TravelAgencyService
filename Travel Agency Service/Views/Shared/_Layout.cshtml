@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel_Agency_Service</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travel_Agency_Service.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span style="font-size: 1.8rem;">✈️</span> Travel Agency
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                🏠 Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trips" asp-action="Index">
                                🌍 Explore Trips
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">
                                    🛒 Cart
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Bookings" asp-action="MyBookings">
                                    📋 My Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="WaitingList" asp-action="MyWaitingList">
                                    ⏰ Waiting List
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    ⚙️ Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Trips" asp-action="Create">
                                            ➕ Create Trip
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Bookings" asp-action="All">
                                            📊 All Bookings
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                            👥 Manage Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminSettings" asp-action="Index">
                                            ⚙️ Settings
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminWaitingList" asp-action="Index">
                                            📋 Manage Waiting Lists
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item me-3 align-self-center">
                                <span class="text-white-50" style="font-size: 0.9rem;">
                                    👋 Hello, <strong>@User.Identity?.Name</strong>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        🚪 Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm me-2"
                                   asp-controller="Account" asp-action="Login">
                                    🔐 Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm"
                                   asp-controller="Account" asp-action="Register">
                                    ✨ Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container fade-in">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 style="margin-bottom: 1rem;">✈️ Travel Agency Service</h5>
                    <p style="opacity: 0.9; margin-bottom: 0.5rem;">
                        Your trusted partner for amazing travel experiences around the world.
                    </p>
                    <p style="opacity: 0.8; font-size: 0.9rem;">
                        &copy; @DateTime.Now.Year - Travel Agency Service. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5 style="margin-bottom: 1rem;">Quick Links</h5>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 0.5rem;">
                            <a asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li style="margin-bottom: 0.5rem;">
                            <a asp-controller="Trips" asp-action="Index">🌍 Explore Trips</a>
                        </li>
                        <li style="margin-bottom: 0.5rem;">
                            <a asp-controller="Home" asp-action="Privacy">🔒 Privacy Policy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
