@model IEnumerable<Travel_Agency_Service.Models.Trip>

@{
    ViewData["Title"] = "Manage Waiting Lists";
}

<style>
    .waiting-list-header {
        background: linear-gradient(135deg, #1e88e5 0%, #00acc1 100%);
        color: white;
        padding: 3rem 0;
        margin: -20px -15px 30px -15px;
        border-radius: 0 0 30px 30px;
    }
    
    .trip-waiting-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        overflow: hidden;
    }
    
    .trip-waiting-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }
    
    .waiting-stats {
        display: flex;
        gap: 1.5rem;
        margin-top: 1rem;
    }
    
    .stat-badge {
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

<div class="waiting-list-header">
    <div class="container text-center">
        <h1 class="mb-3">üìã Manage Waiting Lists</h1>
        <p style="opacity: 0.9; font-size: 1.1rem;">
            View and manage waiting lists for all trips
        </p>
    </div>
</div>

<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info fade-in">@TempData["Message"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; margin-bottom: 1.5rem;">üì≠</div>
            <h3 style="color: #666; margin-bottom: 1rem;">No Waiting Lists</h3>
            <p class="text-muted">
                There are currently no trips with waiting lists. Waiting lists will appear here when users join them.
            </p>
            <div class="mt-3">
                <a asp-controller="Trips" asp-action="Index" class="btn btn-primary">
                    üåç View All Trips
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @{
                var countsDict = ViewBag.WaitingListCounts as System.Collections.Generic.Dictionary<int, (int TotalWaiting, int Notified, int NotNotified)>;
            }
            @foreach (var trip in Model)
            {
                var counts = countsDict != null && countsDict.ContainsKey(trip.Id) ? countsDict[trip.Id] : (TotalWaiting: 0, Notified: 0, NotNotified: 0);
                var totalWaiting = counts.TotalWaiting;
                var notified = counts.Notified;
                var notNotified = counts.NotNotified;

                <div class="col-md-6 col-lg-4">
                    <div class="card trip-waiting-card">
                        <div class="card-header" style="background: linear-gradient(135deg, #1e88e5 0%, #00acc1 100%); color: white;">
                            <h5 class="mb-0">@trip.Title</h5>
                            <small style="opacity: 0.9;">@trip.Destination, @trip.Country</small>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>üìÖ Departure:</strong> @trip.StartDate.ToString("MMMM dd, yyyy")<br />
                                <strong>üí∞ Price:</strong> @trip.Price.ToString("C")<br />
                                <strong>üè® Available Rooms:</strong> 
                                @if (trip.AvailableRooms > 0)
                                {
                                    <span class="badge bg-success">@trip.AvailableRooms</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">0 (Fully Booked)</span>
                                }
                            </div>

                            <div class="waiting-stats">
                                <div class="stat-badge bg-primary text-white">
                                    üë• Total: @totalWaiting
                                </div>
                                <div class="stat-badge bg-info text-white">
                                    ‚úÖ Notified: @notified
                                </div>
                                <div class="stat-badge bg-warning text-white">
                                    ‚è≥ Waiting: @notNotified
                                </div>
                            </div>

                            <div class="mt-3">
                                <a asp-action="TripQueue" 
                                   asp-route-tripId="@trip.Id" 
                                   class="btn btn-primary w-100">
                                    üìã View Waiting List Queue
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Trips" asp-action="Index" class="btn btn-outline-secondary">
                ‚Üê Back to Trips
            </a>
        </div>
    }
</div>
