@model Travel_Agency_Service.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<h2>Delete Trip</h2>

<h4>Are you sure you want to delete this trip?</h4>

<div class="card mb-3">
    <div class="card-body">
        <h4>@Model.Title</h4>
        <p>
            <strong>Destination:</strong> @Model.Destination, @Model.Country<br />
            <strong>Dates:</strong> @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()<br />
            <strong>Price:</strong> @Model.Price.ToString("C")<br />
            <strong>Available Rooms:</strong> @Model.AvailableRooms
        </p>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
