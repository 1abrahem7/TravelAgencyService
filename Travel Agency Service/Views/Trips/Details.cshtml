@model Travel_Agency_Service.Models.Trip
@using Travel_Agency_Service.Models

@{
    ViewData["Title"] = "Trip Details";
    var reviews = ViewBag.Reviews as IEnumerable<Review>;
}

<style>
    .trip-details-header {
        background: linear-gradient(135deg, #1e88e5 0%, #00acc1 100%);
        color: white;
        padding: 3rem 0;
        margin: -20px -15px 30px -15px;
        border-radius: 0 0 30px 30px;
    }
    
    .trip-image-container {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        margin-bottom: 2rem;
    }
    
    .trip-image-container img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .trip-image-container:hover img {
        transform: scale(1.05);
    }
    
    .detail-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }
    
    .detail-item {
        padding: 1rem 0;
        border-bottom: 1px solid #e0e0e0;
    }
    
    .detail-item:last-child {
        border-bottom: none;
    }
    
    .detail-label {
        font-weight: 600;
        color: #666;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .detail-value {
        font-size: 1.1rem;
        color: #333;
        margin-top: 0.5rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 2rem;
    }
    
    .rating-stars {
        color: #ffb300;
        font-size: 1.5rem;
        margin-right: 0.5rem;
    }
</style>

<div class="trip-details-header">
    <div class="container">
        <h1 class="mb-3">@Model.Title</h1>
        @if (Model.AverageRating.HasValue && Model.ReviewCount > 0)
        {
            <div class="d-flex align-items-center">
                <span class="rating-stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= (int)System.Math.Round(Model.AverageRating.Value))
                        {
                            <span>★</span>
                        }
                        else
                        {
                            <span style="opacity: 0.3;">★</span>
                        }
                    }
                </span>
                <span style="font-size: 1.1rem;">
                    @Model.AverageRating.Value.ToString("0.0")/5 (@Model.ReviewCount reviews)
                </span>
            </div>
        }
        else
        {
            <p style="opacity: 0.9;">No reviews yet. Be the first to review!</p>
        }
    </div>
</div>

<div class="container">
@if (Model.AverageRating.HasValue && Model.ReviewCount > 0)
{
    <p>
        @{
            var fullStars = (int)System.Math.Round(Model.AverageRating.Value);
        }
        @for (int i = 1; i <= 5; i++)
        {
            if (i <= fullStars)
            {
                <span>★</span>
            }
            else
            {
                <span>☆</span>
            }
        }
        <span class="text-muted">
            @Model.AverageRating.Value.ToString("0.0")/5 (@Model.ReviewCount reviews)
        </span>
    </p>
}
else
{
    <p class="text-muted">No reviews yet.</p>
}


@if (TempData["Message"] != null)
{
    <div class="alert alert-info fade-in">@TempData["Message"]</div>
}

<div class="row">
    <div class="col-md-5">
        <div class="trip-image-container">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" />
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center" style="height: 400px; background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);">
                    <div class="text-center text-muted">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">✈️</div>
                        <p>No image available</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-7">
        <div class="detail-card">
            <h3 class="mb-4" style="color: #1e88e5;">📍 Trip Information</h3>
            
            <div class="detail-item">
                <div class="detail-label">🌍 Destination</div>
                <div class="detail-value">@Model.Destination, @Model.Country</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">📅 Travel Dates</div>
                <div class="detail-value">
                    @Model.StartDate.ToString("MMMM dd, yyyy") – @Model.EndDate.ToString("MMMM dd, yyyy")
                    <br />
                    <small class="text-muted">(@((Model.EndDate - Model.StartDate).Days) days)</small>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">🎯 Package Type</div>
                <div class="detail-value">
                    <span class="badge bg-primary">@Model.PackageType</span>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">💰 Price</div>
                <div class="detail-value">
                    @if (Model.IsDiscountActive && Model.OldPrice.HasValue)
                    {
                        <span class="price-original">@Model.OldPrice.Value.ToString("C")</span>
                        <span class="price-discounted">@Model.Price.ToString("C")</span>
                        <span class="badge bg-danger ms-2">🔥 On Sale!</span>
                    }
                    else
                    {
                        <span class="price-regular">@Model.Price.ToString("C")</span>
                    }
                    <small class="text-muted d-block mt-1">per person</small>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">🏨 Available Rooms</div>
                <div class="detail-value">
                    @if (Model.AvailableRooms > 0)
                    {
                        <span class="badge bg-success" style="font-size: 1rem; padding: 0.5rem 1rem;">
                            @Model.AvailableRooms available
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger" style="font-size: 1rem; padding: 0.5rem 1rem;">
                            Fully booked
                        </span>
                    }
                </div>
            </div>

            @if (Model.AgeLimit.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">👤 Age Limit</div>
                    <div class="detail-value">@Model.AgeLimit+ years</div>
                </div>
            }

            <div class="detail-item">
                <div class="detail-label">⭐ Popularity Score</div>
                <div class="detail-value">
                    <span class="badge bg-warning">@Model.PopularityScore</span>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">📆 Departure Year</div>
                <div class="detail-value">@Model.DepartureYear</div>
            </div>
        </div>

        <div class="detail-card">
            <h4 style="color: #1e88e5; margin-bottom: 1rem;">📖 About this trip</h4>
            <p style="line-height: 1.8; color: #555;">@Model.ShortDescription</p>
        </div>

        <div class="action-buttons">
            @if (Model.AvailableRooms > 0)
            {
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Bookings"
                       asp-action="Create"
                       asp-route-tripId="@Model.Id"
                       class="btn btn-primary btn-lg">
                        📋 Book this trip
                    </a>
                    
                    <form asp-controller="ShoppingCart"
                          asp-action="Add"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="tripId" value="@Model.Id" />
                        <input type="hidden" name="numberOfPeople" value="1" />
                        <button type="submit" class="btn btn-success btn-lg">
                            🛒 Add to Cart
                        </button>
                    </form>
                    
                    <form asp-controller="Bookings"
                          asp-action="BuyNow"
                          asp-route-tripId="@Model.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="numberOfPeople" value="1" />
                        <button type="submit" class="btn btn-warning btn-lg">
                            💳 Buy Now
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account"
                       asp-action="Login"
                       class="btn btn-primary btn-lg">
                        🔐 Log in to Book
                    </a>
                }
            }
            else
            {
                <div class="alert alert-warning w-100">
                    <strong>⚠️ This trip is fully booked.</strong> Join the waiting list to be notified when rooms become available.
                </div>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="WaitingList"
                          asp-action="Join"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="tripId" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning btn-lg">
                            ⏰ Join Waiting List
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account"
                       asp-action="Login"
                       class="btn btn-warning btn-lg">
                        🔐 Log in to join waiting list
                    </a>
                }
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                    ✏️ Edit Trip
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                    🗑️ Delete Trip
                </a>
            }

            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                ← Back to trips
            </a>
        </div>
    </div>
</div>
</div>

<div class="detail-card mt-4">
    <h3 style="color: #1e88e5; margin-bottom: 2rem;">
        ⭐ Reviews & Ratings
    </h3>

@if (reviews == null || !reviews.Any())
{
    <div class="text-center py-4">
        <div style="font-size: 3rem; margin-bottom: 1rem;">⭐</div>
        <p class="text-muted">No reviews yet. Be the first to review this trip!</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var r in reviews)
        {
            <div class="col-12">
                <div class="card" style="border-left: 4px solid #1e88e5;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <strong style="color: #1e88e5;">
                                    @if (r.User != null && !string.IsNullOrEmpty(r.User.FullName))
                                    {
                                        @r.User.FullName
                                    }
                                    else
                                    {
                                        @("Anonymous User")
                                    }
                                </strong>
                                <br />
                                <small class="text-muted">@r.CreatedAt.ToString("MMMM dd, yyyy")</small>
                            </div>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= r.Rating)
                                    {
                                        <span style="color: #ffb300; font-size: 1.2rem;">★</span>
                                    }
                                    else
                                    {
                                        <span style="color: #ddd; font-size: 1.2rem;">☆</span>
                                    }
                                }
                            </div>
                        </div>
                        <p class="mt-2 mb-0" style="color: #555; line-height: 1.6;">@r.Comment</p>

                        @if (User.Identity?.IsAuthenticated == true &&
                                (r.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                                || User.IsInRole("Admin")))
                        {
                            <form asp-controller="Reviews"
                                  asp-action="Delete"
                                  method="post"
                                  class="mt-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Are you sure you want to delete this review?');">
                                    🗑️ Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-4 pt-4" style="border-top: 2px solid #e0e0e0;">
            <h4 style="color: #1e88e5; margin-bottom: 1.5rem;">✍️ Add Your Review</h4>
            <form asp-controller="Reviews" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="tripId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label"><strong>Rating (1–5)</strong></label>
                    <select name="rating" class="form-select" required style="max-width: 300px;">
                        <option value="">Select a rating...</option>
                        <option value="1">⭐ 1 - Very bad</option>
                        <option value="2">⭐⭐ 2 - Bad</option>
                        <option value="3">⭐⭐⭐ 3 - OK</option>
                        <option value="4">⭐⭐⭐⭐ 4 - Good</option>
                        <option value="5">⭐⭐⭐⭐⭐ 5 - Excellent</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Your Comment</strong></label>
                    <textarea name="comment" class="form-control" rows="4" 
                              placeholder="Share your experience with this trip..."></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-lg">
                    📝 Submit Review
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <a asp-controller="Account" asp-action="Login" class="alert-link">🔐 Log in</a> to add a review and share your experience!
        </div>
    }
</div>
