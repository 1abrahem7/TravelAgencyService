@model Travel_Agency_Service.Models.Trip

@{
    ViewData["Title"] = "Edit Trip";
}

<h2>Edit Trip</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RowVersion" />

    @* same form fields as Create *@
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Destination"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">

            <div class="form-group mb-3">
                <label asp-for="AvailableRooms"></label>
                <input asp-for="AvailableRooms" class="form-control" type="number" />
                <span asp-validation-for="AvailableRooms" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OldPrice"></label>
                <input asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsDiscountActive"></label>
                <input asp-for="IsDiscountActive" class="form-check-input" />
                <span asp-validation-for="IsDiscountActive" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PackageType"></label>
                <input asp-for="PackageType" class="form-control" />
                <span asp-validation-for="PackageType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AgeLimit"></label>
                <input asp-for="AgeLimit" class="form-control" />
                <span asp-validation-for="AgeLimit" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PopularityScore"></label>
                <input asp-for="PopularityScore" class="form-control" />
                <span asp-validation-for="PopularityScore" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartureYear"></label>
                <input asp-for="DepartureYear" class="form-control" />
                <span asp-validation-for="DepartureYear" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsVisible" class="form-check-input" />
                    <label asp-for="IsVisible" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsVisible" class="text-danger"></span>
                <small class="form-text text-muted">Hide this trip from the public catalog if unchecked</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <small class="form-text text-muted">Or upload a new image file below</small>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Upload New Image (optional)</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Leave empty to keep current image</small>
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ShortDescription"></label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to list</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
